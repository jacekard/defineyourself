@{
    ViewData["Title"] = "youDefine";
    //Layout = null;
}

<i id="description-button" class="material-icons">filter_vintage</i>
<div id="description-panel" class="tooltip-inactive">
    <span id="tooltip">
        Hello, type your own idea or click
        <i id="refresh-button" class="material-icons refresh-icon-small">refresh</i>
        to get a random one.
    </span>
</div>

<div class="container">

    <div class="search-section">
        <div class="add-new-panel">
            <span id="new-idea-title"></span>
            <span id="new-idea"></span><br />
            <span id="new-idea-message"></span>
            <i class="material-icons add-new-icon">add_circle_outline</i>
        </div>


        <div class="search-container">

            <div class="idea-info">
                <i id="idea-likes-icon" class="material-icons">loupe</i>
                <span id="idea-likes-count"></span>
            </div>

            <div class="idea-date"></div>

            <div class="idea-container">
                <input id="search-input" placeholder="define..." name="search-input"
                       maxlength="28" autocomplete="off" inputmode="search" spellcheck="false" autofocus />
            </div>

            <div id="result-container" class="ui-widget">
                <div id="log" class="ui-widget-content"></div>
            </div>

            <textarea id="definition-input" placeholder="write your definition..." name="definition-input"
                      maxlength="217" spellcheck="false"></textarea>
            <input class="add-idea-button" type="button" value="add idea" />
        </div>
    </div>


    <div class="search-section" style="display:none;">
        <div class="definition-container"></div>
    </div>
</div>

<footer>
    <a href="~/about">
        <i class="material-icons footer-icon" id="footer-button">panorama_fish_eye</i>
    </a>
</footer>

