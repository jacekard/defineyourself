@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Administrator Panel";
}

<link rel="stylesheet" href="@Url.Content("~/css/admin/admin-bugreports.css")" type="text/css" />

<i class="material-icons page-icon">bug_report</i>

<div class="panel panel-default">
    <div class="panel-heading">Bug reports</div>
    <div class="panel-body container">
        <div class="progress">
            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100"
                 aria-valuemin="0" aria-valuemax="100">
            </div>
            <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="100"
                 aria-valuemin="0" aria-valuemax="100" style="width:10%">

            </div>
        </div>

        <ul class="nav nav-tabs">
            <li class="active"><a id="active-tab" data-toggle="tab" href="#active">Active reports</a></li>
            <li><a id="completed-tab" data-toggle="tab" href="#completed">Completed reports</a></li>
            <li><a id="all-tab" data-toggle="tab" href="#all">All reports</a></li>
        </ul>

        <div class="tab-content">
            <div id="active" class="tab-pane fade in active">

                <div class="sort-section">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                            Sort by
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#">newest</a></li>
                            <li><a href="#">oldest</a></li>
                        </ul>
                    </div>
                    <h3>Sorted by <span class="sort-option">newest</span> reports</h3>
                </div>

                <div class="container table-container table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 5%">Id</th>
                                <th style="width: 70%">Information</th>
                                <th style="width: 15%">Date</th>
                                <th style="width: 10%">Action</th>
                            </tr>
                        </thead>
                        <tbody id="table-body-active"></tbody>
                    </table>
                </div>
            </div>
            <div id="completed" class="tab-pane fade">

                <div class="sort-section">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                            Sort by
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#">newest</a></li>
                            <li><a href="#">oldest</a></li>
                        </ul>
                    </div>
                    <h3>Sorted by <span class="sort-option">newest</span> reports</h3>
                </div>

                <div class="container table-container table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 5%">Id</th>
                                <th style="width: 70%">Information</th>
                                <th style="width: 15%">Date</th>
                                <th style="width: 10%">Action</th>
                            </tr>
                        </thead>
                        <tbody id="table-body-completed">
                        </tbody>
                    </table>
                </div>

            </div>
            <div id="all" class="tab-pane fade">

                <div class="sort-section">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                            Sort by
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#">newest</a></li>
                            <li><a href="#">oldest</a></li>
                        </ul>
                    </div>
                    <h3>Sorted by <span class="sort-option">newest</span> reports</h3>
                </div>

                <div class="container table-container table-responsive">
                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 10%">Id</th>
                                <th style="width: 75%">Information</th>
                                <th style="width: 15%">Date</th>
                            </tr>
                        </thead>
                        <tbody id="table-body-all">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/admin-reportbugs.js"></script>
